{
    "name": "Audio mixer",
    "description": "A browser extension to mix your audio live!",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
		"activeTab",
		"tabs",
		"storage",
		"scripting",
		"tabCapture"
	],
    "icons": {
      "128": "icon/favicon.png",
      "48": "icon/favicon.png"
   },
    "action": {
    "default_title": "Audio mixer",
    "default_popup": "index.html",
    "default_icon": "icon/favicon.png"},
    "options_page": "options.html",
    "background": {
		"service_worker": "scripts/background.js",
		"type": "module"
    }
}